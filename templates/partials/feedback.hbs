



<div class="feedbackdiv" id="feedback-redirect" >
            <h1 class="feedback-heading" >
                Submit Feedback Regarding thier Service Here
            </h1>
            <h3 class="feedback-subheading">You can submit your Feedback here</h3>
            <form class="feedback-form" id="prevent" action="/{{list_link.service}}/{{list_link.link}}" method="post"  >
            <textarea name="textarea" minlength="20" id="textarea"  placeholder="Please Type Here..." cols="30" rows="9"  ></textarea>
            <input type="text" name="name" id="name" placeholder="Name Here" >
            <input type="email" name="email" id="email" placeholder="Email Here" >
            <input type="text" name="path" class="none" value={{list_link.service}} id="name" placeholder="Name here">
            <input type="text" name="slug" class="none"  value={{list_link.link}} id="name" placeholder="Name here">
            <input  type="submit"  class="feedback-btn" value="Submit"   >
            </form>
</div >

{{#if message}}
<div class="alertFeedback {{message.type}}"    style="background-color: {{message.color}};" >
        <span class="fas fa-exclamation-circle"></span>
        <span class="msg">Alert: {{message.alert}}</span>
        <span class="close-btn">
            <span class="fas fa-times"></span>
        </span>
</div>
<script>

let alertclose=document.querySelector(".fa-times");
alertclose.addEventListener("click",()=>{
let close=alertclose.parentElement.parentElement.classList;
    close.add("hide");
    console.log(close)
})


const closefunc=()=>{
    let alertclose=document.querySelector(".fa-times");
    let close=alertclose.parentElement.parentElement.classList;
    close.add("hide");
}
setInterval(closefunc,10000);
</script>
{{/if}}


{{#if feedbackData.length}}
<hr >
<h1 class="feedback"  >Feedback </h1>
{{/if}}
{{#each feedbackData }}
<div class="comment">
<section class="comment-section">
    <div class="comment-div">
        <div class="comment-heading"><span class="cust-name" >{{this.name}} -</span><span class="comment-time">{{this.time}}</span></div>
        <div class="commemt-content">{{this.feedback}}</div>
    </div>
</section>
</div>
{{/each}}



